<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="et_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_md</item>
        <item name="android:layout_marginBottom">@dimen/padding_sm</item>
        <item name="android:background">@drawable/rec_rounded_input</item>
    </style>

    <style name="btn_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_md</item>
        <item name="android:background">@drawable/rect_rounded_btn</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:minHeight">24dip</item>
    </style>

    <style name="btn_default.bordered">
        <item name="android:background">@drawable/rect_rounded_bordered</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="text_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/textsize_lg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="text_title.white">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_md</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>
